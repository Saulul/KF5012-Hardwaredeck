{
  "kind": "collectionType",
  "collectionName": "blogposts",
  "info": {
    "singularName": "blogpost",
    "pluralName": "blogposts",
    "displayName": "Blogpost"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "BlogTitle": {
      "type": "string",
      "default": "BlogTitle",
      "required": true,
      "maxLength": 25,
      "minLength": 2
    },
    "BlogContent": {
      "type": "text",
      "required": true,
      "maxLength": 500,
      "minLength": 2
    },
    "BlogAuthor": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
